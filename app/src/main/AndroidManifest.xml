<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apteki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Apteki">
        <activity android:name=".ActivityNewNote"></activity>
        <activity android:name=".SearchingPageActivity" />
        <activity
            android:name=".MenuActivity"
            android:theme="@style/NoActionBarApteki" />
        <activity
            android:name=".ChooseLocationsActivity"
            android:theme="@style/NoActionBarApteki" />
        <activity android:name=".ChooseLanguages" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarApteki">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>